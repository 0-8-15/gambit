#! /bin/sh

# The following settings are determined by the configure script.

C_COMPILER=@C_COMPILER_SH@
C_PREPROC=@C_PREPROC_SH@
PKG_CONFIG=@PKG_CONFIG_SH@

FLAGS_OBJ=@FLAGS_OBJ_SH@
FLAGS_DYN=@FLAGS_DYN_SH@
FLAGS_LIB=@FLAGS_LIB_SH@
FLAGS_EXE=@FLAGS_EXE_SH@

FLAGS_OPT=@FLAGS_OPT_SH@
FLAGS_OPT_RTS=@FLAGS_OPT_RTS_SH@

DEFS_OBJ=@DEFS_OBJ_SH@
DEFS_DYN=@DEFS_DYN_SH@
DEFS_LIB=@DEFS_LIB_SH@
DEFS_EXE=@DEFS_EXE_SH@

BUILD_OBJ=@BUILD_OBJ_SH@
BUILD_DYN=@BUILD_DYN_SH@
BUILD_LIB=@BUILD_LIB_SH@
BUILD_EXE=@BUILD_EXE_SH@

DEFS=@DEFS_SH@
LIBS=@LIBS_SH@
GAMBITLIB=@GAMBITLIB_SH@
GAMBITGSCLIB=@GAMBITGSCLIB_SH@
GAMBITGSILIB=@GAMBITGSILIB_SH@
LIB_PREFIX=@LIB_PREFIX_SH@
LIB_EXTENSION=@LIB_EXTENSION_SH@
OBJ_EXTENSION=@OBJ_EXTENSION_SH@
EXE_EXTENSION=@EXE_EXTENSION_SH@
BAT_EXTENSION=@BAT_EXTENSION_SH@

GAMBCOMP_CC_OPTIONS_REGEXP="^ #|\\*/\"\\*/\"cc-options|# \""
GAMBCOMP_LD_OPTIONS_PRELUDE_REGEXP="^ #|\\*/\"\\*/\"ld-options-prelude|# \""
GAMBCOMP_LD_OPTIONS_REGEXP="^ #|\\*/\"\\*/\"ld-options|# \""
GAMBCOMP_PKG_CONFIG_REGEXP="^ #|\\*/\"\\*/\"pkg-config|# \""

get_meta_info()
{
  grep "$2" "$1" | sed -e s,"$2",,g -e s,"\"$",,g
}

get_meta_info_list()
{
  GAMBCOMP_META_INFO_LIST=""
  GAMBCOMP_SAVE_IFS="$IFS"
  IFS='
'
  for info in $(get_meta_info "$1" "$2"); do
    GAMBCOMP_META_INFO_LIST="${GAMBCOMP_META_INFO_LIST}$info "
  done
  IFS="${GAMBCOMP_SAVE_IFS}"
}

process_pkg_config()
{
  GAMBCOMP_SAVE_IFS="$IFS"
  IFS='
'
  for pkg in $(get_meta_info "$1" "${GAMBCOMP_PKG_CONFIG_REGEXP}"); do
    if test -z "${PKG_CONFIG}"; then
      echo "the pkg-config program is unavailable but is needed to get C compiler options for package '$pkg' which is a dependency of '$1'"
      exit 1
    else
      GAMBCOMP_CC_OPTIONS="${GAMBCOMP_CC_OPTIONS}$(${PKG_CONFIG} --cflags $pkg) "
      GAMBCOMP_LD_OPTIONS="${GAMBCOMP_LD_OPTIONS}$(${PKG_CONFIG} --libs $pkg) "
    fi
  done
  IFS="${GAMBCOMP_SAVE_IFS}"
}

extract_cc_ld_options()
{
  GAMBCOMP_CC_OPTIONS=""
  GAMBCOMP_LD_OPTIONS_PRELUDE=""
  GAMBCOMP_LD_OPTIONS=""

  for file in "$@"; do
    process_pkg_config "$file"
  done

  for file in "$@"; do

    get_meta_info_list "$file" "${GAMBCOMP_CC_OPTIONS_REGEXP}"
    GAMBCOMP_CC_OPTIONS="${GAMBCOMP_CC_OPTIONS}${GAMBCOMP_META_INFO_LIST}"

    get_meta_info_list "$file" "${GAMBCOMP_LD_OPTIONS_PRELUDE_REGEXP}"
    GAMBCOMP_LD_OPTIONS_PRELUDE="${GAMBCOMP_LD_OPTIONS_PRELUDE}${GAMBCOMP_META_INFO_LIST}"

    get_meta_info_list "$file" "${GAMBCOMP_LD_OPTIONS_REGEXP}"
    GAMBCOMP_LD_OPTIONS="${GAMBCOMP_LD_OPTIONS}${GAMBCOMP_META_INFO_LIST}"

  done
}

case "$1" in

  "obj")

    extract_cc_ld_options ${BUILD_OBJ_INPUT_FILENAMES}

    BUILD_OBJ_CC_OPTIONS="${GAMBCOMP_CC_OPTIONS}${BUILD_OBJ_CC_OPTIONS}"

    if test ! -z "${GAMBCOMP_VERBOSE}"; then
      echo @BUILD_OBJ_ECHO@
    fi

    @BUILD_OBJ@
    ;;

  "dyn")

    extract_cc_ld_options ${BUILD_DYN_INPUT_FILENAMES}

    BUILD_DYN_CC_OPTIONS="${GAMBCOMP_CC_OPTIONS}${BUILD_DYN_CC_OPTIONS}"
    BUILD_DYN_LD_OPTIONS_PRELUDE="${GAMBCOMP_LD_OPTIONS_PRELUDE}${BUILD_DYN_LD_OPTIONS_PRELUDE}"
    BUILD_DYN_LD_OPTIONS="${GAMBCOMP_LD_OPTIONS}${BUILD_DYN_LD_OPTIONS}"

    if test ! -z "${GAMBCOMP_VERBOSE}"; then
      echo @BUILD_DYN_ECHO@
    fi

    @BUILD_DYN@
    ;;

  "lib")

    if test ! -z "${GAMBCOMP_VERBOSE}"; then
      echo @BUILD_LIB_ECHO@
    fi

    @BUILD_LIB@
    ;;

  "exe")

    if test ! -z "${GAMBCOMP_VERBOSE}"; then
      echo @BUILD_EXE_ECHO@
    fi

    @BUILD_EXE@
    ;;

  "C_COMPILER")
    echo "${C_COMPILER}"
    ;;

  "C_PREPROC")
    echo "${C_PREPROC}"
    ;;

  "PKG_CONFIG")
    echo "${PKG_CONFIG}"
    ;;

  "FLAGS_OBJ")
    echo "${FLAGS_OBJ}"
    ;;

  "FLAGS_DYN")
    echo "${FLAGS_DYN}"
    ;;

  "FLAGS_LIB")
    echo "${FLAGS_LIB}"
    ;;

  "FLAGS_EXE")
    echo "${FLAGS_EXE}"
    ;;

  "FLAGS_OPT")
    echo "${FLAGS_OPT}"
    ;;

  "FLAGS_OPT_RTS")
    echo "${FLAGS_OPT_RTS}"
    ;;

  "DEFS_OBJ")
    echo "${DEFS_OBJ}"
    ;;

  "DEFS_DYN")
    echo "${DEFS_DYN}"
    ;;

  "DEFS_LIB")
    echo "${DEFS_LIB}"
    ;;

  "DEFS_EXE")
    echo "${DEFS_EXE}"
    ;;

  "BUILD_OBJ")
    echo "${BUILD_OBJ}"
    ;;

  "BUILD_DYN")
    echo "${BUILD_DYN}"
    ;;

  "BUILD_LIB")
    echo "${BUILD_LIB}"
    ;;

  "BUILD_EXE")
    echo "${BUILD_EXE}"
    ;;

  "DEFS")
    echo "${DEFS}"
    ;;

  "LIBS")
    echo "${LIBS}"
    ;;

  "GAMBITLIB")
    echo "${GAMBITLIB}"
    ;;

  "GAMBITGSCLIB")
    echo "${GAMBITGSCLIB}"
    ;;

  "GAMBITGSILIB")
    echo "${GAMBITGSILIB}"
    ;;

  "LIB_PREFIX")
    echo "${LIB_PREFIX}"
    ;;

  "LIB_EXTENSION")
    echo "${LIB_EXTENSION}"
    ;;

  "OBJ_EXTENSION")
    echo "${OBJ_EXTENSION}"
    ;;

  "EXE_EXTENSION")
    echo "${EXE_EXTENSION}"
    ;;

  "BAT_EXTENSION")
    echo "${BAT_EXTENSION}"
    ;;

  "")
    # Dump configure script settings

    ESC_SH="sed -e s/\\\\/\\\\\\\\\\\\\\\\/g -e s/\\\"/\\\\\\\"/g -e s/\\\$/\\\\\\\$/g -e s/^/\"/ -e s/$/\"/"

    echo C_COMPILER=`echo "${C_COMPILER}" | ${ESC_SH}`
    echo C_PREPROC=`echo "${C_PREPROC}" | ${ESC_SH}`
    echo PKG_CONFIG=`echo "${PKG_CONFIG}" | ${ESC_SH}`

    echo FLAGS_OBJ=`echo "${FLAGS_OBJ}" | ${ESC_SH}`
    echo FLAGS_DYN=`echo "${FLAGS_DYN}" | ${ESC_SH}`
    echo FLAGS_LIB=`echo "${FLAGS_LIB}" | ${ESC_SH}`
    echo FLAGS_EXE=`echo "${FLAGS_EXE}" | ${ESC_SH}`

    echo FLAGS_OPT=`echo "${FLAGS_OPT}" | ${ESC_SH}`
    echo FLAGS_OPT_RTS=`echo "${FLAGS_OPT_RTS}" | ${ESC_SH}`

    echo DEFS_OBJ=`echo "${DEFS_OBJ}" | ${ESC_SH}`
    echo DEFS_DYN=`echo "${DEFS_DYN}" | ${ESC_SH}`
    echo DEFS_LIB=`echo "${DEFS_LIB}" | ${ESC_SH}`
    echo DEFS_EXE=`echo "${DEFS_EXE}" | ${ESC_SH}`

    echo BUILD_OBJ=`echo "${BUILD_OBJ}" | ${ESC_SH}`
    echo BUILD_DYN=`echo "${BUILD_DYN}" | ${ESC_SH}`
    echo BUILD_LIB=`echo "${BUILD_LIB}" | ${ESC_SH}`
    echo BUILD_EXE=`echo "${BUILD_EXE}" | ${ESC_SH}`

    echo DEFS=`echo "${DEFS}" | ${ESC_SH}`
    echo LIBS=`echo "${LIBS}" | ${ESC_SH}`
    echo GAMBITLIB=`echo "${GAMBITLIB}" | ${ESC_SH}`
    echo GAMBITGSCLIB=`echo "${GAMBITGSCLIB}" | ${ESC_SH}`
    echo GAMBITGSILIB=`echo "${GAMBITGSILIB}" | ${ESC_SH}`
    echo LIB_PREFIX=`echo "${LIB_PREFIX}" | ${ESC_SH}`
    echo LIB_EXTENSION=`echo "${LIB_EXTENSION}" | ${ESC_SH}`
    echo OBJ_EXTENSION=`echo "${OBJ_EXTENSION}" | ${ESC_SH}`
    echo EXE_EXTENSION=`echo "${EXE_EXTENSION}" | ${ESC_SH}`
    echo BAT_EXTENSION=`echo "${BAT_EXTENSION}" | ${ESC_SH}`
    ;;

  *)
    echo "gambcomp-C unknown operation \"$1\""
    exit 1
    ;;

esac
